<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - asp_presentacion</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/asp_presentacion.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">INICIO</a>

                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                        Menu
                    </button>
                    <ul class="dropdown-menu">
                        <li class="nav-item dropdown-item">
                            <a class="nav-link text-dark" asp-page="/Index">Inicio</a>
                        </li>

                        <li class="nav-item dropdown-item">
                            <a class="nav-link text-dark" asp-area=""
                               asp-page="/Ventanas/Autores">Autores</a>
                        </li>
                        <li class="nav-item dropdown-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Ventanas/Categorias">Categorias</a>
                        </li>
                        <li class="nav-item dropdown-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Ventanas/Consumos">Consumos</a>
                        </li>
                        <li class="nav-item dropdown-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Ventanas/Empleados_Roles">Empleados_Roles</a>
                        </li>
                        <li class="nav-item dropdown-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Ventanas/Empleados">Empleados</a>
                        </li>
                        <li class="nav-item dropdown-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Ventanas/Idiomas">Idiomas</a>
                        </li>
                        <li class="nav-item dropdown-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Ventanas/Libros">Libros</a>
                        </li>
                        <li class="nav-item dropdown-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Ventanas/Multas">Multas</a>
                        </li>
                        <li class="nav-item dropdown-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Ventanas/Miembros">Miembros</a>
                        </li>
                        <li class="nav-item dropdown-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Ventanas/Pagos">Pagos</a>
                        </li>
                        <li class="nav-item dropdown-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Ventanas/Permisos">Permisos</a>
                        </li>
                        <li class="nav-item dropdown-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Ventanas/Prestamos">Prestamos</a>
                        </li>
                        <li class="nav-item dropdown-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Ventanas/Productos">Productos</a>
                        </li>
                        <li class="nav-item dropdown-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Ventanas/Proveedores">Proveedores</a>
                        </li>
                        <li class="nav-item dropdown-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Ventanas/Reservas">Reservas</a>
                        </li>
                        <li class="nav-item dropdown-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Ventanas/Roles">Roles</a>
                        </li>
                        <li class="nav-item dropdown-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Ventanas/RolesPermisos">RolesPermisos</a>
                        </li>
                        <li class="nav-item dropdown-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Ventanas/Usuarios">Usuarios</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-layout">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Sistema Bibliotecario - <a asp-area="" asp-page="/Privacy">Privacidad</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>